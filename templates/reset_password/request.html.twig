{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Reset your password{% endtrans %}
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<h1>{% trans %}Reset your password{% endtrans %}</h1>

	{{ form_start(requestForm) }}
	{{ form_row(requestForm.email) }}
	<div>
		<small>
			{% trans %}Enter your email address and we will send you a
			                link to reset your password.{% endtrans %}
		</small>
	</div>

	<button class="btn btn-primary mt-2">{% trans %}Send password reset email{% endtrans %}</button>
	{{ form_end(requestForm) }}
{% endblock %}
