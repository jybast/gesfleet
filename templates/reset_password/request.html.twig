{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Reset your password{% endtrans %}
{% endblock %}
{% block header %}
	{% include "fragments/_nav.html.twig" %}


{% endblock %}
{% block body %}
	<div class="container">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<div class="row">
			<div class="col-12 col-md-5 offset-md-1 mt-4">
				<h1>{% trans %}Reset your password{% endtrans %}</h1>

				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				<div>
					<small>
						{% trans %}Enter your email address and we will send you a link to reset your password.{% endtrans %}
					</small>
				</div>

				<button class="btn btn-primary mt-2 mb-3">{% trans %}Send password reset email{% endtrans %}</button>
				{{ form_end(requestForm) }}</div>
			<div class="col-12 col-md-4 offset-md-2 mt-4">
				<img src="{{ asset('assets/img/login.jpg')}}" alt="Image" srcset="">

			</div>
		</div>

	</div>
{% endblock %}
{% block footer %}
	{% include "fragments/_footer.html.twig" %}
{% endblock %}
