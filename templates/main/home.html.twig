{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}
	Welcome
	{% endtrans %}
{% endblock %}
{% block header %}

	<header id="header" class="header text-center">
		{% include "fragments/_nav.html.twig" %}
		<div class="container">
			<div class="row mt-5">
				<div class="col-lg-6 col-md-6 col-sm-10 mt-3">
					<div class="text-center mb-5">
						<div class="section-title">
							{% trans %}Welcome to our website dedicated to the management of a fleet of personal vehicles.{% endtrans %}
						</div>
						<h1 class="title-bold">
							{% trans %}An effective management to your vehicles.{% endtrans %}
						</h1>
						<p class="text-large">
							{% trans %}Access to features is restricted to registered members.{% endtrans %}
						</p>
						<p class="text-large">
							<a class="section-title" href="{{ path('app_register')}}">{% trans %}Not registered Yet ? Create your account Now !{% endtrans %}</a>
						</p>

					</div>
				</div>
				<div class="col-lg-6 col-md-6 col-sm-10 mt-3 ">
					<div class="image-container">
						<img src="{{ asset('assets/img/header-illustration.svg')}}" alt="Illustration" class="img-fluid">
					</div>
				</div>
			</div>
		</div>
	</header>
{% endblock %}
{% block body %}
	<div class="row mt-2">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success" role="alert">{{ message }}</div>
		{% endfor %}
		{% for message in app.flashes('message') %}
			<div class="alert alert-info" role="alert">{{ message }}</div>
		{% endfor %}
	</div>
	<div class="text-center title-bold">
		<h1>{% trans %}Select your feature{% endtrans %}</h1>
	</div>

	<div class="row m-2">
		<p class="text-italique">
			{% trans %}The "driver" profile allows you to manage operations relating to the use of a vehicle such as keeping a logbook and following a dashboard of vehicle use.{% endtrans %}</p>
		<p class="text-italique">
			{% trans %}The "Manager" profile provides access to dashboards for monitoring maintenance and costs relating to fleet ownership.{% endtrans %}</p>
		<p class="text-italique">
			{% trans %}Each of these profiles depends on the rights granted by the site administrator.{% endtrans %}</p>
	</div>
	<div class="row align-content-between">
		<div class="col-lg-6 col-md-6 col-sm-10 mt-3 g-2">
			<div class="container-image">
				<div class="wrap-image bg-velvet">
					<a href="">
						<figure class="vignette">
							<img src="{{ asset('assets/img/conduire.jpg')}}" alt="Driver">
							<caption class="overlay">
								<p>{% trans %}Driver{% endtrans %}</p>
							</caption>
						</figure>
					</a>
				</div>
			</div>
		</div>
		<div class="col-lg-6 col-md-6 col-sm-10 mt-3 ">
			<div class="container-image">
				<div class="wrap-image bg-pink">
					<a href="">
						<figure class="vignette">
							<img src="{{ asset('assets/img/gestion01.jpg')}}" alt="Manager">
							<caption class="overlay">
								<p>{% trans %}Manager{% endtrans %}</p>
							</caption>
						</figure>
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block footer %}
	{% include "fragments/_footer.html.twig" %}
{% endblock %}
