{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}
	Contact Us
	{% endtrans %}
{% endblock %}
{% block header %}
	<nav class="navbar navbar-expand-lg navbar-light bg-info">
		<div class="container-fluid">
			<a class="navbar-brand mb-2" href="#">
				<img src="{{ asset('assets/img/logo_transparent.png')}}" alt="Logo">
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#HomeNavbar" aria-controls="HomeNavbar" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="HomeNavbar">
				<ul class="navbar-nav ms-auto mb-2">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="#">{% trans %}
							Home
							{% endtrans %}</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">{% trans %}Contact Us{% endtrans %}</a>
					</li>

					<li class="nav-item">
						<a class="nav-link">{% trans %}About Us{% endtrans %}</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>


{% endblock %}
{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-10">
				<div class="row justify-content-center">
					<div class="col-md-6">
						<h3 class="heading mb-4">
							{% trans %}Let's talk about everything{% endtrans %}

						</h3>
						<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Modi ipsam excepturi praesentium nemo vitae minima explicabo eveniet optio aspernatur fugiat.</p>
						<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Omnis hic ipsa adipisci accusamus repellat? Amet a consectetur magnam nisi sit?</p>
						<p>
							<img src="{{ asset('assets/img/contact03.jpg')}}" alt="Contact">
						</p>
					</div>
					<div class="col-md-6">
						<div class="contact-container">
							<div class="wrap-contact">
								<div>
									<span class="form-contact-logo">
										<img src="{{ asset('assets/img/logo_transparent.png')}}" alt="">
									</span>
								</div>
								<div>
									{{ form_start(form)}}

									{{ form_label(form.email)}}
									{{ form_widget(form.email)}}
									{{ form_label(form.sujet)}}
									{{ form_widget(form.sujet)}}
									{{ form_label(form.message)}}
									{{ form_widget(form.message)}}

									{{ form_end(form)}}
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
