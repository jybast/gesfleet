{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}
	Contact Us
	{% endtrans %}
{% endblock %}
{% block header %}
	{% include "fragments/_nav.html.twig" %}


{% endblock %}
{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-10">
				<div class="row justify-content-center">
					<div class="col-md-6">
						<h3 class="heading mb-4">
							{% trans %}Let's talk about everything{% endtrans %}

						</h3>
						<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Modi ipsam excepturi praesentium nemo vitae minima explicabo eveniet optio aspernatur fugiat.</p>
						<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Omnis hic ipsa adipisci accusamus repellat? Amet a consectetur magnam nisi sit?</p>
						<p>
							<img src="{{ asset('assets/img/contact03.jpg')}}" alt="Contact">
						</p>
					</div>
					<div class="col-md-6">
						<div class="contact-container">
							<div class="wrap-contact">
								<div>
									<span class="form-contact-logo">
										<img src="{{ asset('assets/img/logo_transparent.png')}}" alt="">
									</span>
								</div>
								<div>
									{{ form_start(form)}}

									{{ form_label(form.email)}}
									{{ form_widget(form.email)}}
									{{ form_label(form.subject)}}
									{{ form_widget(form.subject)}}
									{{ form_label(form.message)}}
									{{ form_widget(form.message)}}

									{{ form_end(form)}}
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block footer %}
	{% include "fragments/_footer.html.twig" %}
{% endblock %}
