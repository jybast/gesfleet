<div class="content">

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-10">
				<div class="row justify-content-center">
					<div class="col-md-6">
						<h3 class="heading mb-4">
							Contact Us
						</h3>

						{# '@images/' refers to the defined path in Twig.yaml namespace #}
						<p><img src="{{ email.image('@images/contact03.jpg')}}" alt="Image" class="img-fluid"></p>
					</div>
					<div class="col-md-6">
						<h1>
							Contact Us
						</h1>

						<p>
							from :
							{{ from }}
						</p>

						<p>
							subject
																																																								
																																																								:
							{{ subject }}</p>

						<p>

							Your message
																																																								
																																																								:
							{{ message | raw }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
