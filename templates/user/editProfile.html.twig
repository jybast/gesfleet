{% extends 'base.html.twig' %}

{% block title %}Edit User profile
{% endblock %}


{% block header %}
	{% include "fragments/_nav.html.twig" %}

{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-2">
			{% include "user/_profile-sidebar.html.twig" %}
		</div>
		<div class="col-8 offset-1 py-3">
			<div class="row">
				<h1>Edit Profile
				</h1>
				<div class="col-6">
					{{ form_start(form) }}
					{{ form_widget(form) }}
					{{ form_end(form) }}
				</div>
				<div class="col-6">
					{% for image in app.user.images %}
						<img src="{{ asset('uploads/images/'~ image.name) }}" alt="" width="150">
						<a href="{{ path('app_user_delete_image', {id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">{% trans %}Delete avatar{% endtrans %}</a>
					{% endfor %}
				</div>
			</div>

		</div>
	</div>
</div>{% endblock %}{% block footer %}
{% include "fragments/_footer.html.twig" %}{% endblock %}{% block javascripts %}
<script src="{{ asset('assets/js/deleteImage.js')}}"></script>{% endblock %}
