{% extends 'base.html.twig' %}

{% block title %}Edit User profile
{% endblock %}


{% block header %}
	{% include "user/_profile-header.html.twig" %}

{% endblock %}
{% block body %}
	<div id="layoutSidenav">
		{{	include('user/_profile-sidebar.html.twig') }}

		<div id="layoutSidenav_content">
			<main>


				<div class="row">
					<h1 class="text-center">Edit Profile
					</h1>
					<div class="col-12 ms-3 col-md-6 m-md-3">
						{{ form_start(form) }}
						<h2>{% trans %}Personal data{% endtrans %}</h2>
						<div class="row">
							<div class="col-12 col-md-6">{{ form_row(form.firstname)}}</div>
							<div class="col-12 col-md-6">{{ form_row(form.lastname)}}</div>
						</div>
						<div class="row">
							<div class="col-12 col-md-6">{{ form_row(form.birthdate)}}</div>
							<div class="col-12 col-md-6">{{ form_row(form.gender)}}</div>
						</div>

						<h2>{% trans %}Address{% endtrans %}</h2>
						<div class="row">
							<div class="col-12 col-md-6">{{ form_row(form.address)}}</div>
							<div class="col-12 col-md-6">{{ form_row(form.city)}}</div>
						</div>
						<div class="row">
							<div class="col-12 col-md-6">{{ form_row(form.zipcode)}}</div>
							<div class="col-12 col-md-6">{{ form_row(form.phone)}}</div>
						</div>

						{{ form_end(form) }}
					</div>
					<div class="col-12 col-md-5 m-md-3">
						{% for image in app.user.images %}
							<img src="{{ asset('uploads/images/'~ image.name) }}" alt="" width="150">
							<a href="{{ path('app_user_delete_image', {id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">{% trans %}Delete avatar{% endtrans %}</a>
						{% endfor %}
					</div>
				</div>


			</main>
		</div>
	</div>
{% endblock %}
{% block footer %}
	{% include "fragments/_footer.html.twig" %}
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('assets/js/deleteImage.js')}}"></script>
{% endblock %}
